{
  "name": "server",
  "version": "1.0.0",
  "description": "Pogtracker backend server",
  "author": "",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf ./build && tsc",
    "build:watch": "rm -rf ./build && tsc --watch",
    "start": "NODE_ENV=development && nodemon --exec babel-node ./build/app.js",
    "dev": "nodemon --exec babel-node index.js",
    "test": "jest --runInBand",
    "test:watch": "jest --runInBand --watch"
  },
  "jest": {
    "transform": {
      ".(ts|tsx|js|jsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(express-validator)/)"
    ],
    "testMatch": [
      "**/__tests__/*.test.(ts|js)"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.4",
    "@types/compression": "0.0.36",
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.13",
    "dotenv": "^7.0.0",
    "jest": "^24.8.0",
    "nodemon": "^1.18.11",
    "ts-jest": "^24.0.2",
    "typescript": "3.5.1"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.16.4"
  }
}
